
# http://opentutorials.net/gcc/gccint/Target-Fragment.html

# Teensy 3.0 uses -mcpu=cortex-m4 -mthumb

MULTILIB_OPTIONS	=  mthumb
MULTILIB_OPTIONS	+= march=armv7
#MULTILIB_OPTIONS	+= mfloat-abi=hard

MULTILIB_MATCHES	=  march?armv7=mcpu?cortex-m4
MULTILIB_MATCHES	+= march?armv7=march?armv7-m

MULTILIB_EXCEPTIONS	=  march=armv7* mthumb

MULTILIB_REQUIRED	=  mthumb/march=armv7
#MULTILIB_REQUIRED	+= mthumb/march=armv7/mfloat-abi=hard

MULTILIB_OSDIRNAMES	=  mthumb/march.armv7=!thumb2
#MULTILIB_OSDIRNAMES	+= mthumb/march.armv7/mfloat-abi.hard=!thumb2fpu


